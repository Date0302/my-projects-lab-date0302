{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3ToSendToSQSPolicy",
      "Effect": "Allow",
      "Principal": {
        "Service": "s3.amazonaws.com"
      },
      "Action": "sqs:SendMessage",
      "Resource": "arn:aws:sqs:<region>:<account-id>:image-processing-queue",
      "Condition": {
        "ArnEquals": {
          "aws:SourceArn": "arn:aws:s3:::my-unique-image-upload-bucket"
        }
      }
    }
  ]
}